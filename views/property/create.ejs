<div class="container">
<h2 style="margin:17px;" >Property Create form</h2>

<form action="/property/create" method="POST" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2">Property Title: </label>
        <div class="col-sm-10">
            <input class="form-control" name="Property[name]" type="text">
            <input type="hidden" name="Property[ownerid]" value="<%=userid%>"></input>
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-sm-2">Image URL: </label>
        <div class="col-sm-10">
            <input class="form-control" name="Property[name]" type="text">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Estate: </label>
        <div class="col-sm-10">
           <select class="form-control" name="Property[area]">
		  <option>Festival City</option>
		  <option>Tin Ma Court</option>
		  <option>City One Shatin</option>
		  <option>Festival City</option>
          </select>
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-sm-2">Bedrooms: </label>
        <div class="col-sm-10">
            <input class="form-control" name="Property[name]" type="number">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Gross Area: </label>
        <div class="col-sm-10">
            <input class="form-control" name="Property[name]" type="number">
        </div>
    </div>
    
    <div class="form-group">
        <label class="control-label col-sm-2">Expected Tenants: </label>
        <div class="col-sm-10">
            <input class="form-control" name="Property[name]" type="number">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Rent: </label>
        <div class="col-sm-10">
            <input class="form-control" name="Property[name]" type="number">
        </div>
    </div>
     

    <button class="btn btn-default col-sm-offset-2" type="submit" value="ADD">Create</button>
</form>