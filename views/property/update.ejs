<div class="container">
<h2 style="margin:17px;" >Property Update form</h2>

<form class="form-horizontal" action="/property/update/<%=property.id%>" method="POST" >


<div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Property Title:</label>
    <div class="col-sm-10">
      <input type="text" name="Property[name]" class="form-control" value="<%=property.name%>" >
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Image URL:</label>
    <div class="col-sm-10">
      <input type="text" name="Property[URLimg]" class="form-control" value="<%=property.URLimg%>" >
    </div>
  </div>

  <div class="form-group">
    
  
    <label for="inputPassword3" class="col-sm-2 control-label">Estate:</label>
    <div class="col-sm-10">
      <select class="form-control" name="Property[locate]">
      <option>Festival City</option>
      <option>Tin Ma Court</option>
      <option>City One Shatin</option>
      <option>Festival City</option>
          </select>
      

    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Bedrooms:</label>
    <div class="col-sm-10">
      <input type="number" name="Property[Bedrooms]" class="form-control" value="<%=property.Bedrooms%>" >
    </div>
  </div>
  
<div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Gross Area:</label>
    <div class="col-sm-10">
      <input type="text" name="Property[area]" class="form-control" value="<%=property.area%>" >
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Expected Tenants:</label>
    <div class="col-sm-10">
      <input type="number" name="Property[ExpectedTenants]" class="form-control" value="<%=property.ExpectedTenants%>" >
    </div>
  </div>
  
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Rent:</label>
    <div class="col-sm-10">
      <input type="number" name="Property[rent]" class="form-control" value="<%=property.rent%>" >
    </div>
  </div>

  <%if(userrole==1){%>
    <div class="form-group">
      <label for="Hig" class="col-sm-2 control-label">Highlight:</label>
      <div class="col-sm-10">
      <%if(property.highlight==1){%>
        <input type="checkbox" name="Property[highlight]" value="1" checked>
      <% } else {%>
        <input type="checkbox" name="Property[highlight]" value="1">
      <% }%>
      </div>
    </div>
  <% } else {%>
    <input type="hidden" name="Property[highlight]" value="<%=property.highlight%>">
  <% }%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update</button>
    </div>
  </div>
</form>


